[sub_resource type="Shader" id="Shader_background"]
code = "shader_type canvas_item;
render_mode unshaded;
uniform vec4 color_top = vec4(0.05, 0.09, 0.16, 1.0);
uniform vec4 color_bottom = vec4(0.09, 0.17, 0.28, 1.0);
uniform vec4 accent = vec4(0.12, 0.65, 0.95, 0.42);
uniform float overlay_opacity = 0.58;
uniform vec2 cursor = vec2(0.5, 0.5);
void fragment() {
    vec2 uv = UV;
    float t = TIME * 0.12;
    float wave = sin((uv.y + t) * 9.0) * 0.06;
    float ribbon = sin((uv.x * 0.6 - uv.y + t * 1.6) * 14.0) * 0.05;
    vec4 base = mix(color_top, color_bottom, clamp(uv.y + wave + ribbon, 0.0, 1.0));
    float grid = sin((uv.x + t * 0.5) * 32.0) * sin((uv.y + t * 0.35) * 26.0);
    grid = pow(abs(grid), 2.2);
    float cursor_glow = exp(-10.0 * length(uv - cursor));
    vec3 accent_color = accent.rgb * (cursor_glow + 0.35);
    COLOR = base + vec4(vec3(grid * accent.a), 0.0);
    COLOR.rgb += accent_color * 0.7;
    COLOR.a = overlay_opacity;
}"

